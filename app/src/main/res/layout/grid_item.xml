<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Using custom image view to get the proper height/width itself
         I don't need to measure it by myself which is hard mostly
         impossible to do. So let the adapter to set the height/width
         for ech cell then set the image to same these measure -->
    <com.rwash.popularmovieapp.CustomImageView

        android:id="@+id/grid_item_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/sample_0"
        android:scaleType="fitCenter">

    </com.rwash.popularmovieapp.CustomImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#bbe6e5e5"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <TextView android:id="@+id/grid_item_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:gravity="bottom|center"
            android:textSize="20sp"
            android:paddingBottom="5dp"
            android:text="example"
            />

    </LinearLayout>
</FrameLayout>